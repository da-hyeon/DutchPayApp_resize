<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66.57dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="17.14dp"
            android:paddingRight="17.14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUsageDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/malgunfont"
                    android:includeFontPadding="false"
                    android:text="2019/04/26"
                    android:textColor="#2a2a2a"
                    android:textSize="11.42dp" />

                <TextView
                    android:id="@+id/tvUsageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/malgunfont"
                    android:includeFontPadding="false"
                    android:text="새마을식당"
                    android:textColor="#2a2a2a"
                    android:textSize="13.71dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="21.14dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivUsagePayStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wallet16_5" />

                <TextView
                    android:id="@+id/tvUsagePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9.14dp"
                    android:fontFamily="@font/malgunfont"
                    android:includeFontPadding="false"
                    android:textColor="#2a2a2a"
                    android:textSize="13.71dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/next_arrow_36x118" />
        </LinearLayout>
    </LinearLayout>
</layout>