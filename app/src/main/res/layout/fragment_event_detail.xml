<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">


        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.14dp"
            android:layout_marginTop="34.57dp"
            android:layout_marginRight="17.14dp"
            android:fontFamily="@font/malgunfont"
            app:layout_constraintLeft_toLeftOf="parent"
            android:includeFontPadding="false"
            android:text="아이유와 함께 하는 더차피에 할인 이벤트"
            android:textSize="18.28dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dutchpay_event"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitXY"
            android:layout_marginTop="7.42dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEventTitle" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="47.42dp"
            android:background="#ffd336"
            android:text="이벤트 참여하기"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="17.14dp"
            android:layout_marginRight="17.14dp"
            android:layout_marginBottom="17.14dp"
            android:textSize="20dp"
            />
    </android.support.constraint.ConstraintLayout>
</layout>