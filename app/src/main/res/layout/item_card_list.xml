<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llCardBackground"
        android:background="@color/hanaCardColor"
        android:layout_width="match_parent"
        android:layout_height="76.28dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="17.14dp"
            android:layout_marginRight="17.14dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/malgunfont"
                    android:includeFontPadding="false"
                    android:text="하나카드"
                    android:textColor="@android:color/white"
                    android:textSize="13.71dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.28dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="1234-****-****-5678"
                    android:textColor="@android:color/white"
                    android:textSize="11.42dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivCardDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/wallet8_1" />

        </LinearLayout>
    </LinearLayout>

</layout>