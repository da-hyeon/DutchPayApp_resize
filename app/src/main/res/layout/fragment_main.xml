<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f8ff">

        <ImageView
            android:id="@+id/ivTop"
            android:layout_width="match_parent"
            android:layout_height="209.3dp"
            android:scaleType="fitXY"
            android:src="@drawable/layer_1362_copy_2" />


        <android.support.constraint.ConstraintLayout
            android:id="@+id/clContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15.3dp"
            android:layout_marginRight="15.3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clSuccessLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.7dp"
                    android:fontFamily="@font/malgunfont"
                    android:includeFontPadding="false"
                    android:text="@string/welcome_userName"
                    android:textColor="#afd3ff"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserName">

                    <TextView
                        android:id="@+id/txt_userDutchMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/malgunfont"
                        android:includeFontPadding="false"
                        android:text="3,000,000,000"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.7dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
                        android:fontFamily="@font/malgunfont"
                        android:includeFontPadding="false"
                        android:text="@string/welcome_userMoney"
                        android:textColor="#afd3ff"
                        android:textSize="16sp" />
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clNoneLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/layer_1390_copy_2"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/malgunfont"
                    android:includeFontPadding="false"
                    android:text="@string/welcome_title"
                    android:textColor="#afd3ff"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivTitle"
                    app:layout_constraintLeft_toRightOf="@+id/ivTitle" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/malgunfont"
                android:includeFontPadding="false"
                android:letterSpacing="-0.03"
                android:paddingLeft="-3dp"
                android:lineSpacingExtra="-6.7sp"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/welcome_logoText"
                android:textColor="#ffffff"
                android:textSize="22.5sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="199.7dp"
                android:layout_height="38dp"
                android:layout_marginTop="10.3dp"
                android:src="@drawable/vector_smart_object_copy_3"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.3dp"
            android:layout_marginTop="24.3dp"
            android:layout_marginRight="15.3dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/ivTop"
            app:layout_constraintTop_toBottomOf="@+id/ivTop">

            <ImageView
                android:id="@+id/ivSoloPay"
                android:layout_width="0dp"
                android:layout_height="118.7dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/group_4_copy" />

            <ImageView
                android:id="@+id/ivDutchPay"
                android:layout_width="0dp"
                android:layout_height="118.7dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/group_5_copy" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.3dp"
            android:layout_marginTop="32.3dp"
            android:layout_weight="7"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="0.5sp"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/welcome_eventTitle"
            android:textColor="#383838"
            android:textSize="13.5sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ibAllEvent"
            app:layout_constraintTop_toBottomOf="@+id/llButtons" />

        <ImageButton
            android:id="@+id/ibAllEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.3dp"
            android:background="@color/transparent"
            android:src="@drawable/shape_35_copy"
            app:layout_constraintBottom_toBottomOf="@+id/tvEventTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvEventTitle" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_mainVP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15.3dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15.3dp"
            android:layout_marginBottom="27.3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEventTitle" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_mainTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15.3dp"
            android:layout_marginRight="15.3dp"
            app:layout_constraintBottom_toBottomOf="@+id/vp_mainVP"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            tools:ignore="MissingPrefix" />

    </android.support.constraint.ConstraintLayout>
</layout>