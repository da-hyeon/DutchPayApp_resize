<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBG">

        <View
            android:id="@+id/vTitle"
            android:layout_width="match_parent"
            android:layout_height="56.28dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.14dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:text="황다현"
            android:textColor="#0f69ff"
            android:textSize="12.57dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/vTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:text=" 님이 접속중입니다."
            android:textColor="#2a2a2a"
            android:textSize="12.57dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/vTitle"
            app:layout_constraintLeft_toRightOf="@+id/tvUserName"
            app:layout_constraintTop_toTopOf="@+id/vTitle" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.14dp"
            android:layout_marginTop="16dp"
            android:text="내 더치머니"
            android:textSize="13.71dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vTitle" />


        <View
            android:id="@+id/vMiddle"
            android:layout_width="match_parent"
            android:layout_height="152.28dp"
            android:layout_marginLeft="17.14dp"
            android:layout_marginTop="8.57dp"
            android:layout_marginRight="17.14dp"
            android:background="@drawable/outline_round_dialog"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvFristText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.57dp"
            android:layout_marginTop="26.57dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:text="현재 보유중인 더치머니는 "
            android:textColor="#1e1e1e"
            android:textSize="13.14dp"
            app:layout_constraintLeft_toLeftOf="@+id/vMiddle"
            app:layout_constraintTop_toTopOf="@+id/vMiddle" />


        <TextView
            android:id="@+id/tvUserMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:drawableLeft="@drawable/my_info_icon"
            android:text="1,500,000"
            android:textColor="#ff2e2e"
            android:textSize="13.14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvFristText"
            app:layout_constraintLeft_toRightOf="@+id/tvFristText"
            app:layout_constraintTop_toTopOf="@+id/tvFristText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:text="원 입니다."
            android:textColor="#1e1e1e"
            android:textSize="13.14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvFristText"
            app:layout_constraintLeft_toRightOf="@+id/tvUserMoney"
            app:layout_constraintTop_toTopOf="@+id/tvFristText" />


        <TextView
            android:id="@+id/tvMiddleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.57dp"
            android:layout_marginTop="19.14dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:text="이메일주소 : "
            android:textColor="#1e1e1e"
            android:textSize="13.14dp"
            app:layout_constraintLeft_toLeftOf="@+id/vMiddle"
            app:layout_constraintTop_toBottomOf="@+id/tvFristText" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.14dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:text="kjg123kg@gmail.com"
            android:textColor="#1e1e1e"
            android:textSize="13.14dp"
            app:layout_constraintLeft_toRightOf="@+id/tvMiddleText"
            app:layout_constraintTop_toBottomOf="@+id/tvFristText" />

        <TextView
            android:id="@+id/tvLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.57dp"
            android:layout_marginTop="19.14dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:text="전 화 번 호 : "
            android:textColor="#1e1e1e"
            android:textSize="13.14dp"
            app:layout_constraintLeft_toLeftOf="@+id/vMiddle"
            app:layout_constraintTop_toBottomOf="@+id/tvMiddleText" />

        <TextView
            android:id="@+id/tvUserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.14dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:text="010-7600-1318"
            android:textColor="#1e1e1e"
            android:textSize="13.14dp"
            app:layout_constraintLeft_toRightOf="@+id/tvLast"
            app:layout_constraintTop_toBottomOf="@+id/tvMiddleText" />

        <View
            android:id="@+id/vLast"
            android:layout_width="match_parent"
            android:layout_height="86.85dp"
            android:layout_marginLeft="17.14dp"
            android:layout_marginTop="10.57dp"
            android:layout_marginRight="17.14dp"
            android:background="@drawable/outline_round_dialog"
            app:layout_constraintTop_toBottomOf="@+id/vMiddle"/>

        <View
            android:id="@+id/vLeft"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="@+id/vLast"
            app:layout_constraintRight_toRightOf="@+id/vCenter"/>
        <View
            android:id="@+id/vCenter"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/vRight"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="@+id/vCenter"
            app:layout_constraintRight_toRightOf="@+id/vLast"/>

        <ImageView
            android:id="@+id/ivEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/vLast"
            android:layout_marginTop="15.42dp"
            app:layout_constraintRight_toRightOf="@+id/vLeft"
            app:layout_constraintTop_toTopOf="@+id/vLast"
            android:src="@drawable/my_info_icon1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 변경하기"
            android:textSize="8.57dp"
            android:textStyle="bold"
            android:textColor="#1e1e1e"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/ivEmail"
            app:layout_constraintLeft_toLeftOf="@+id/ivEmail"
            app:layout_constraintRight_toRightOf="@+id/ivEmail"/>

        <ImageView
            android:id="@+id/ivPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.42dp"
            app:layout_constraintLeft_toLeftOf="@+id/vLeft"
            app:layout_constraintRight_toRightOf="@+id/vCenter"
            app:layout_constraintTop_toTopOf="@+id/vLast"
            android:src="@drawable/my_info_icon2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경하기"
            android:textSize="8.57dp"
            android:textStyle="bold"
            android:textColor="#1e1e1e"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/ivPassword"
            app:layout_constraintLeft_toLeftOf="@+id/ivPassword"
            app:layout_constraintRight_toRightOf="@+id/ivPassword"/>


        <ImageView
            android:id="@+id/ivPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.42dp"
            app:layout_constraintLeft_toLeftOf="@+id/vCenter"
            app:layout_constraintRight_toRightOf="@+id/vRight"
            app:layout_constraintTop_toTopOf="@+id/vLast"
            android:src="@drawable/my_info_icon3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호 변경하기"
            android:textSize="8.57dp"
            android:textStyle="bold"
            android:textColor="#1e1e1e"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/ivPhone"
            app:layout_constraintLeft_toLeftOf="@+id/ivPhone"
            app:layout_constraintRight_toRightOf="@+id/ivPhone"/>


        <ImageView
            android:id="@+id/ivWithdrawal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.42dp"
            app:layout_constraintLeft_toLeftOf="@+id/vRight"
            app:layout_constraintRight_toRightOf="@+id/vLast"
            app:layout_constraintTop_toTopOf="@+id/vLast"
            android:src="@drawable/my_info_icon4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴하기"
            android:textSize="8.57dp"
            android:textStyle="bold"
            android:textColor="#1e1e1e"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/ivWithdrawal"
            app:layout_constraintLeft_toLeftOf="@+id/ivWithdrawal"
            app:layout_constraintRight_toRightOf="@+id/ivWithdrawal"/>

        <View
            android:id="@+id/vEmail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/vLast"
            app:layout_constraintBottom_toBottomOf="@+id/vLast"
            app:layout_constraintLeft_toLeftOf="@+id/vLast"
            app:layout_constraintRight_toRightOf="@+id/vLeft"/>

        <View
            android:id="@+id/vPassword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/vLast"
            app:layout_constraintBottom_toBottomOf="@+id/vLast"
            app:layout_constraintLeft_toLeftOf="@+id/vLeft"
            app:layout_constraintRight_toRightOf="@+id/vCenter"/>

        <View
            android:id="@+id/vPhone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/vLast"
            app:layout_constraintBottom_toBottomOf="@+id/vLast"
            app:layout_constraintLeft_toLeftOf="@+id/vCenter"
            app:layout_constraintRight_toRightOf="@+id/vRight"/>

        <View
            android:id="@+id/vWithdrawal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/vLast"
            app:layout_constraintBottom_toBottomOf="@+id/vLast"
            app:layout_constraintLeft_toLeftOf="@+id/vRight"
            app:layout_constraintRight_toRightOf="@+id/vLast"/>

    </android.support.constraint.ConstraintLayout>
</layout>