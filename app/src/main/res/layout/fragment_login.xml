<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBG">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="38.7dp"
            android:layout_marginRight="17.14dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/malgunfont"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="-6.7sp"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/login_firstText"
            android:textColor="#292929"
            android:textSize="22.5sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/edit_userID"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.3dp"
            android:src="@drawable/vector_smart_object_copy"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/edit_userID"
            android:layout_width="match_parent"
            android:layout_height="41.7dp"
            android:layout_marginLeft="17.14dp"
            android:layout_marginTop="38.28dp"
            android:layout_marginRight="17.14dp"
            android:background="#ffffff"
            android:fontFamily="@font/malgunfont"
            android:hint="@string/login_IdHint"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:paddingLeft="10.50dp"
            android:singleLine="true"
            android:textColorHint="#afafaf"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/edit_userPW"
            android:layout_width="match_parent"
            android:layout_height="41.7dp"
            android:layout_marginLeft="17.14dp"
            android:layout_marginTop="3.42dp"
            android:layout_marginRight="17.14dp"
            android:background="#ffffff"
            android:fontFamily="@font/malgunfont"
            android:hint="@string/login_PWHint"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingLeft="10.50dp"
            android:singleLine="true"
            android:textColorHint="#afafaf"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/edit_userID"
            app:layout_constraintTop_toBottomOf="@+id/edit_userID" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="17.14dp"
            android:layout_marginTop="13.14dp"
            android:layout_marginRight="17.14dp"
            android:background="@color/buttonSelect"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:scaleType="fitXY"
            android:text="로그인"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_userPW" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:src="@drawable/layer_1239_copy_17"
            app:layout_constraintLeft_toLeftOf="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <LinearLayout
            android:id="@+id/llAutoLogin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintLeft_toLeftOf="@+id/imageView3"
            app:layout_constraintRight_toRightOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3">

            <CheckBox
                android:id="@+id/cbAutoLogin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:button="@drawable/mycheck_autologin"
                android:checked="true"
                android:gravity="center_vertical"
                android:paddingLeft="5dp" />

        </LinearLayout>


        <View
            android:id="@+id/vAutoLogin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView1"
            app:layout_constraintLeft_toLeftOf="@+id/llAutoLogin"
            app:layout_constraintRight_toRightOf="@+id/textView1"
            app:layout_constraintTop_toTopOf="@+id/textView1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:text="@string/login_autoLoginText"
            android:textColor="#292929"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintLeft_toRightOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="70.7dp"
            android:layout_marginLeft="17.14dp"
            android:layout_marginRight="17.14dp"
            android:layout_marginBottom="77.3dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent" />
        <!--Layout-->
        <View
            android:id="@+id/layoutRegister"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintLeft_toLeftOf="@+id/view"
            app:layout_constraintRight_toRightOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <View
            android:id="@+id/vFindEmail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintLeft_toLeftOf="@+id/view1"
            app:layout_constraintRight_toRightOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <View
            android:id="@+id/vFindPassword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintLeft_toLeftOf="@+id/view2"
            app:layout_constraintRight_toRightOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />
        <!--Layout-->

        <!--View-->
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
            app:layout_constraintRight_toLeftOf="@+id/image_userRegister" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/image_userRegister"
            app:layout_constraintRight_toLeftOf="@+id/imageView10" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView10"
            app:layout_constraintRight_toLeftOf="@+id/imageView11" />

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView11"
            app:layout_constraintRight_toRightOf="@+id/linearLayout" />

        <!--View-->

        <ImageView
            android:id="@+id/image_userRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/layer_930"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
            app:layout_constraintRight_toLeftOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="@string/login_registerText"
            android:textColor="#757575"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/image_userRegister"
            app:layout_constraintRight_toRightOf="@+id/image_userRegister"
            app:layout_constraintTop_toBottomOf="@+id/image_userRegister" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/layer_928"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
            app:layout_constraintRight_toRightOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="@string/login_fineIdText"
            android:textColor="#757575"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/imageView10"
            app:layout_constraintRight_toRightOf="@+id/imageView10"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/layer_927"
            app:layout_constraintLeft_toRightOf="@+id/imageView10"
            app:layout_constraintRight_toRightOf="@id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/malgunfont"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="@string/login_finePWText"
            android:textColor="#757575"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/imageView11"
            app:layout_constraintRight_toRightOf="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        <ImageView
            android:id="@+id/ivKakao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.14dp"
            android:layout_marginTop="21.42dp"
            android:layout_marginRight="17.14dp"
            android:layout_marginBottom="17.14dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_kakao_login"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ivKakao" />

    </android.support.constraint.ConstraintLayout>
</layout>