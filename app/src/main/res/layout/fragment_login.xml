<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f1f2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46.85dp"
            android:text="@string/login_firstText"
            android:textColor="#292929"
            android:textSize="25.71dp"
            android:textStyle="bold"
            android:fontFamily="@font/malgunfont"
            app:layout_constraintLeft_toLeftOf="@+id/edit_userID"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.57dp"
            android:src="@drawable/dutchpay_logo02"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/edit_userID"
            android:layout_width="match_parent"
            android:layout_height="47.42dp"
            android:layout_marginLeft="17.14dp"
            android:layout_marginRight="17.14dp"
            android:layout_marginTop="38.28dp"
            android:background="#ffffff"
            android:inputType="textEmailAddress"
            android:hint="@string/login_IdHint"
            android:paddingLeft="10.50dp"
            android:fontFamily="@font/malgunfont"
            android:singleLine="true"
            android:textColorHint="#afafaf"
            android:textSize="13.71dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/edit_userPW"
            android:layout_width="match_parent"
            android:layout_height="47.42dp"
            android:background="#ffffff"
            android:hint="@string/login_PWHint"
            android:paddingLeft="10.50dp"
            android:singleLine="true"
            android:fontFamily="@font/malgunfont"
            android:textColorHint="#afafaf"
            android:layout_marginTop="3.42dp"
            android:inputType="textPassword"
            android:textSize="13.71dp"
            android:layout_marginLeft="17.14dp"
            android:layout_marginRight="17.14dp"
            app:layout_constraintLeft_toLeftOf="@+id/edit_userID"
            app:layout_constraintTop_toBottomOf="@+id/edit_userID" />

        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginLeft="17.14dp"
            android:layout_marginRight="17.14dp"
            android:src="@drawable/login_login"
            android:layout_marginTop="13.14dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_userPW"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_box"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            app:layout_constraintLeft_toLeftOf="@+id/btn_login"/>

        <CheckBox
            android:id="@+id/image_autoLoginCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/mycheck"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintLeft_toLeftOf="@+id/imageView3"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_autoLoginText"
            android:textSize="13.71dp"
            android:textColor="#292929"
            android:fontFamily="@font/malgunfont"
            android:layout_marginLeft="3dp"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintLeft_toRightOf="@+id/imageView3"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="80.57dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:layout_marginLeft="17.14dp"
            android:layout_marginRight="17.14dp"
            android:layout_marginTop="98dp"
            />
        <!--Layout-->
        <LinearLayout
            android:id="@+id/layoutRegister"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/view"
            app:layout_constraintRight_toRightOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            android:orientation="horizontal" />
        <!--Layout-->

        <!--View-->
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
            app:layout_constraintRight_toLeftOf="@+id/image_userRegister" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/image_userRegister"
            app:layout_constraintRight_toLeftOf="@+id/imageView10" />
        <!--View-->

        <ImageView
            android:id="@+id/image_userRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_join"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
            app:layout_constraintRight_toLeftOf="@+id/imageView10"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_registerText"
            android:textColor="#757575"
            android:textSize="11.42dp"
            android:fontFamily="@font/malgunfont"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/image_userRegister"
            app:layout_constraintLeft_toLeftOf="@+id/image_userRegister"
            app:layout_constraintRight_toRightOf="@+id/image_userRegister"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_search_id"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
            app:layout_constraintRight_toRightOf="@+id/linearLayout"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_fineIdText"
            android:textColor="#757575"
            android:textSize="10dp"
            android:fontFamily="@font/malgunfont"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            app:layout_constraintLeft_toLeftOf="@+id/imageView10"
            app:layout_constraintRight_toRightOf="@+id/imageView10"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_search_password"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintLeft_toRightOf="@+id/imageView10"
            app:layout_constraintRight_toRightOf="@id/linearLayout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_finePWText"
            android:textColor="#757575"
            android:textSize="10dp"
            android:fontFamily="@font/malgunfont"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            app:layout_constraintLeft_toLeftOf="@+id/imageView11"
            app:layout_constraintRight_toRightOf="@+id/imageView11"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/login_kakao_login"
            android:layout_marginTop="21.42dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="17.14dp"
            android:layout_marginRight="17.14dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>

    </android.support.constraint.ConstraintLayout>

</layout>